<% include partials/header %>

<div class="container">
    <div class = "row">
        <div class="col-md-3">
            <p class = "lead">Event</p>
            <div class = "list-group">
                <li class = "list-group-item active"><h4><%=event.date%></h4></li>
                <li class = "list-group-item">Info 1</li>
                <li class = "list-group-item">Info 1</li>
            </div>
        </div>
        <div class = "col-md-9">
            <div class = "thumbnail show-thumnail">
                <img class="img-responsive" src="<%=event.image%>">
                <div class = "caption-full">
                    <h1><%=event.name%></h1>
                    <p>Submitted by <%= event.author.username%></p>
                    <p><%=event.description%></p>
                    <% if(currentUser && event.author.id.equals(currentUser._id)) { %>
                    <a class = "btn btn-warning btn-xs" href = "/events/<%=event._id%>/edit">Edit</a>
                    <form id="delete-form" action="/events/<%=event._id%>?_method=DELETE" method="POST">  
                        <button class = "btn btn-danger btn-xs">Delete</button>
                    </form>  <!--form is needed cuz we have to send in an overriden delete request -->
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
</div>


<% include partials/footer %>